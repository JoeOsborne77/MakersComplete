
<div style="border-width:6px; border-style:solid; border-color:#000000; padding: 1em">
  <% @bookings.each do |booking| %>
    <h2><div style="border-width:4px; border-style:solid; border-color:#000000; padding: 1em">
    <h5>Space name: <%=booking.space.space_name %></h5>
    <h5>Booking ID: <%= booking.id %> </h5>
    <h5>Booking date: <%= booking.booking_date %></h5>
    <h5>Confimation pending status:</h5>
    <h5><%= "Booking pending" if booking.pending_confirmation == true %></h5>
    <h5>Confirmation status:</h5>
    <h5><%= "Confirmation pending" if booking.confirmed == false %></h5>
    </div>
  <% end %>
</div>

