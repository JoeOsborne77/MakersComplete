.rotate {
  position: fixed;
  right: 20px;
  bottom: 10px;
  z-index: -1;
  animation: rotation 7s infinite linear;
}

@keyframes rotation {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(359deg);
  }
}
